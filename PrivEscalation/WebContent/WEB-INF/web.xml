<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>page1</servlet-name>
    <jsp-file>/WEB-INF/admin_page1.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>page1</servlet-name>
    <url-pattern>/admin/page1</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>page2</servlet-name>
    <jsp-file>/WEB-INF/admin_page2.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>page2</servlet-name>
    <url-pattern>/admin/page2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>page3</servlet-name>
    <jsp-file>/WEB-INF/admin_page3.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>page3</servlet-name>
    <url-pattern>/admin/page3</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>page4</servlet-name>
    <jsp-file>/WEB-INF/admin_page4.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>page4</servlet-name>
    <url-pattern>/admin/page4</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>url1</servlet-name>
    <jsp-file>/WEB-INF/user_page1.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>url1</servlet-name>
    <url-pattern>/user/page1</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>url2</servlet-name>
    <jsp-file>/WEB-INF/user_page2.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>url2</servlet-name>
    <url-pattern>/user/page2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>url3</servlet-name>
    <jsp-file>/WEB-INF/user_page3.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>url3</servlet-name>
    <url-pattern>/user/page3</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>url4</servlet-name>
    <jsp-file>/WEB-INF/user_page4.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>url4</servlet-name>
    <url-pattern>/user/page4</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <jsp-file>/WEB-INF/logout.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <security-role>
    <role-name>user</role-name>
  </security-role>
  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin_page</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <url-pattern>/user/*</url-pattern>
      <url-pattern>/</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>user_page</web-resource-name>
      <url-pattern>/user/*</url-pattern>
      <url-pattern>/</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>file</realm-name>
    <form-login-config>
      <form-login-page>/WEB-INF/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/error.jsp</form-error-page>
    </form-login-config>
  </login-config>
</web-app>